# Database Configuration
# For local development, use SQLite
DATABASE_URL="file:./nagari.db"

# For production on Vercel, use PostgreSQL
# DATABASE_URL="postgresql://username:password@hostname:port/database_name?sslmode=require"

# Node Environment
NODE_ENV="development"

# Next.js Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_SITE_NAME="Website Nagari"

# Authentication (for production, generate secure random strings)
# You can generate these using: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# Admin Configuration
DEFAULT_ADMIN_USERNAME="admin"
DEFAULT_ADMIN_PASSWORD="admin123"

# File Upload Configuration (if implementing file uploads)
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE="5242880" # 5MB

# External APIs (if needed)
# MAPS_API_KEY="your-maps-api-key"
# WEATHER_API_KEY="your-weather-api-key"

# Email Configuration (if implementing email features)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"

# Analytics (if implementing)
# GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"

# Feature Flags
ENABLE_REGISTRATION="false"
ENABLE_FILE_UPLOAD="true"
ENABLE_ANALYTICS="false"

# Security
JWT_SECRET="your-jwt-secret-key-here"
BCRYPT_ROUNDS="10"

# Logging
LOG_LEVEL="info"
